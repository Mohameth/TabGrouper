{
    "manifest_version": 2,
    "name": "Tab Grouper",
    "version": "1.0",
    "description": "Groups tabs by domain and shows them in a dropdown.",
    "permissions": [
      "tabs",
      "activeTab"
    ],
    "background": {
      "scripts": ["background.js"]
    },
    "browser_action": {
      "default_title": "Tab Grouper",
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "layer-group.svg"
    }
  }